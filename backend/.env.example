# ============================================
# AI Configuration
# ============================================
# USE_OPENAI=true  -> Uses OpenAI API (requires API key, paid)
# USE_OPENAI=false -> Uses local Ollama (FREE, runs on your machine)

USE_OPENAI=false

# OpenAI Settings (only needed if USE_OPENAI=true)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Ollama Settings (only needed if USE_OPENAI=false)
# Install Ollama: https://ollama.ai/download
# Pull a model: ollama pull qwen2.5-coder:3b
# Start Ollama: ollama serve (usually auto-starts)
OLLAMA_MODEL=qwen2.5-coder:3b

# ============================================
# Other Configuration
# ============================================

# MongoDB Connection (for production deployment)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=AppName

# Email Configuration (Gmail App Password for weekly reports)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Google OAuth (for Google Sign-In)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
